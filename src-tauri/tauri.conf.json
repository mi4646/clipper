{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Clipper",
  "version": "0.1.0",
  "identifier": "com.example.clipper",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "clipper",
        "width": 1401,
        "height": 805,
        "resizable": true,
        "fullscreen": false,
        "maximized": false,
        "visible": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets":"all",
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDRBNUQ5RjQ3MzcxNzk3QzcKUldUSGx4YzNSNTlkU3UwYXByaHNjdUtKazA1Zk9mcndKRHUzTXgxZTBKRW9HYVhsVks5WDBBbFQK",
      "endpoints": [
        "https://github.com/mi4646/clipper/releases/latest/download/latest.json",
        "http://localhost:5173/update/{{target}}/{{current_version}}"
      ],
      "dialog": true
    }
  }
}
